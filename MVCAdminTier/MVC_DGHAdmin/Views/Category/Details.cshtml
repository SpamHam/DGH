@model MVC_DGHAdmin.Models.CategoryViewModels

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>CategoryDTO</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SelectedCategory.categoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SelectedCategory.categoryName)
        </dd>

    </dl>
    <p> Tabellen viser hvilke produkter der hører under den valgte kategori. En kategori kan kun <b>slettes</b>, hvis der ikke er nogle produkter der hører under dem</p> 
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th> Id</th>
                <th> Title</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var a in Model.Product)
            {
                if (a.categoryId == Model.SelectedCategory.id) { 
                <tr>

                    <td class="col-md-1">@a.id</td>
                    <td class="col-md-11">@a.name</td>

                </tr>
                }
            }
        </tbody>
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.SelectedCategory.id }) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.SelectedCategory.id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
